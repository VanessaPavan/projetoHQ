<!-- Formulário de cadastro de historia-->

<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Cadastre sua história!</title>
		</head>
	<body>

		<h1>Cadastre a história!</h1>

			<% if(validacao) { %>
			<ul> 
				<% for(var i=0; i< validacao.length; i++) { %>
				<li>
					<%=validacao[i].msg%>
				</li>
				<% } %> 
			</ul
		<% } %>

		<br />
		<form action="/historia/salvar" method="get">
			<label>Título:</label>
			<input type="text" id="titulo" value="<%=historia.titulo%>"" name="titulo">
			<br />
			<br />
			<label>Classificação Indicativa:</label>
			<br />
			<br />
			<select name="class_ind" value="<%=historia.class_ind%>"" size="4">
  				<option value="L">L</option>
  				<option value="14">14</option>
  				<option value="16">16</option>
  				<option value="18">18</option>
			</select>
			<br />
			<br />
			<label>Sinopse:</label>
			<br />
			<br />
			<textarea name="sinopse" value="<%=historia.sinopse%>"" rows="10" cols="30">
			</textarea>
			<br />
			<br />
			<label>Capa:</label>
            <input type="file" name="capa" id="capa">
			<br />
			<br />
			<label>Autor:</label>
			<input type="text" id="autor" value="<%=historia.autor%>"" name="autor">
			<br />
			<br />
			<input type="submit" value="Pronto!" />
			<br />
			<br />
			<input type="reset" value="Cancelar"/>
		</form>
	</body>
</html>